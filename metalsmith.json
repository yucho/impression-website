{
  "source": "src",
  "destination": "dest",
  "metadata": {
    "site": {
      "title": "yoursitetitle",
      "url": "https://yoursitehost.com"
    }
  },
  "plugins": {
    "./lib/prebuild.js": true,
    "metalsmith-concat-convention": {
      "extname": ".concat"
    },
    "metalsmith-clean-css": {
      "files": ["src/scripts/**/*.css"]
    },
    "metalsmith-uglify": {
      "sameName": true,
      "uglify": {"sourceMap": false}
    },
    "metalsmith-partial": {
      "directory": "./lib/partials",
      "engine": "eco"
    },
    "metalsmith-nestedlayouts": {
      "directory": "lib/layouts",
      "pattern": "**/*.@(eco|html)"
    },
    "metalsmith-in-place": true,
    "metalsmith-sitemap": {
      "hostname": "https://yoursitehost.com"
    }
  }
}
